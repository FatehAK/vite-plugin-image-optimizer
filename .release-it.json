{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: Release v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": true
  },
  "github": {
    "release": true,
    "draft": true,
    "commitArgs": ["-S"],
    "tagArgs": ["-s"],
    "releaseName": "âœ¨ Version v${version}",
    "assets": ["tar/*.tgz"]
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "before:init": ["pnpm lint"],
    "after:bump": "pnpm build:prod && pnpm tarball",
    "after:release": "echo Successfully created a release v${version} for ${repo.repository}. Please add release notes when necessary and publish it!"
  }
}
