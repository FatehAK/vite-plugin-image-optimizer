{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "enabledManagers": ["npm"],
  "rangeStrategy": "bump",
  "commitMessagePrefix": "chore(deps): ðŸ”¨ ",
  "branchPrefix": "renovate-",
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": true,
  "configMigration": true,
  "automerge": true,
  "automergeType": "branch",
  "automergeStrategy": "rebase",
  "platformCommit": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "rebaseWhen": "behind-base-branch",
  "patch": {
    "groupName": "non-major dependencies",
    "groupSlug": "minor-patch"
  },
  "minor": {
    "groupName": "non-major dependencies",
    "groupSlug": "minor-patch"
  },
  "major": {
    "automerge": false,
    "dependencyDashboardApproval": true,
    "commitMessagePrefix": "chore(deps-major): ðŸ”¨ ",
    "labels": ["dependencies", "breaking"]
  },
  "vulnerabilityAlerts": {
    "labels": ["security"]
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["^eslint"],
      "groupName": "eslint packages"
    },
    {
      "matchPackagePatterns": ["^stylelint"],
      "groupName": "stylelint packages"
    },
    {
      "matchPackagePatterns": ["^rollup", "^@rollup"],
      "groupName": "rollup plugins"
    },
    {
      "matchPackagePatterns": ["^vite-", "^@vitejs"],
      "groupName": "vite plugins"
    },
    {
      "matchPackagePatterns": ["^postcss-"],
      "groupName": "postcss plugins"
    },
    {
      "packageNames": ["node"],
      "enabled": false
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "enabled": false
    }
  ],
  "ignoreDeps": ["chalk"]
}
